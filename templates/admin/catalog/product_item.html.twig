{% extends 'admin/base_item.html.twig' %}

{% block item_form %}
    <div class="col-6">
        {% for f in form %}
            {{ form_row(f) }}
        {% endfor %}
    </div>
    <div class="col-6">
        {% if item.category %}
            <div class="row mt-3">
                <div class="col-lg-12">
                    <div>
                        <h5 class="mb-3">{{ 'Category'|trans }}:</h5>
                        <div class="row">
                            {% include 'admin/catalog/_item_card.html.twig' with {'item': item.category, 'item_route': 'admin_catalog_category_item'} %}
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}

        {% if item.collection %}
            <div class="row mt-3">
                <div class="col-lg-12">
                    <div>
                        <h5 class="mb-3">{{ 'Collection'|trans }}:</h5>
                        <div class="row">
                            {% include 'admin/catalog/_item_card.html.twig' with {'item': item.collection, 'item_route': 'admin_catalog_collection_item'} %}
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}

    </div>
{% endblock %}
