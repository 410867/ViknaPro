                                <img src="{{ category.img|app_img }}" alt="">
                                <h3>{{ category.title }}</h3>
                                <p>{{ category.description }}</p>
                                <a href="{{ path('category', {'slug': category.slug}) }}">Смотреть каталог <img
                                            src="/front/images/arrow_right_Img.svg"
                                            alt="arrow right"></a>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
