{% extends 'front/base.html.twig' %}

{% block stylesheet %}
    <link rel="stylesheet" href="/front/css/category.css">
{% endblock %}

{% block body %}
    <main>
        <div class="main">
            <hr class="top__main__hr">
            <div class="block__door">
                <p><a href="/">Главная</a><span>/</span>{{ category.title }}</p>
                <h2>{{ category.title }}</h2>
                <div class="block__door__list">

                    {% for subCategory in category.children %}
                        <div class="block__door__item">
                            <img class="item__img" src="{{ subCategory.img|app_img }}" alt="">
                            <div class="block__text">
                                <h3>{{ subCategory.title }}</h3>
                                <p>{{ subCategory.description }}</p>
                                <a href="{{ path('category', {'slug': subCategory.slug}) }}">
                                    Смотреть бренды
                                    <img src="/front/images/arrow_right_Img.svg" alt="">
                                </a>
                            </div>
                        </div>
                    {% endfor %}

                </div>
            </div>
        </div>
    </main>
{% endblock %}
