{% extends 'admin/base_item.html.twig' %}

{% block body %}
    {{ parent() }}

    {% if item.parent %}
        <div class="row mt-3">
            <div class="col-lg-12">
                <div>
                    <h5 class="mb-3">{{ 'Parent category'|trans }}:</h5>
                    <div class="row">
                        {% include 'admin/catalog/_item_card.html.twig' with {'item': item.parent, 'item_route': 'admin_catalog_category_item'} %}
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

    {% if item.id and item.template.value == 'SUB_CATEGORIES' %}
        <div class="row mt-3">
            <div class="col-lg-12">
                <div>
                    <h5 class="mb-3">{{ 'Children categories'|trans }}:</h5>
                    <div class="row">
                        {% for category in item.children %}
                            {% include 'admin/catalog/_item_card.html.twig' with {'item': category, 'item_route': 'admin_catalog_category_item'} %}
                        {% endfor %}
                        <div class="col-xl-4 col-sm-6" style="margin-bottom: 10px">
                            <a href="{{ path('admin_catalog_category_item_new', {'parent': item.id}) }}"
                               class="btn btn-success btn-lg btn-block">
                                {{ 'Add new' }}
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

    {% if item.id and item.template.value == 'CATEGORY_COLLECTION' %}
        <div class="row mt-3">
            <div class="col-lg-12">
                <div>
                    <h5 class="mb-3">{{ 'Collections'|trans }}:</h5>
                    <div class="row">
                        {% for collection in item.categoryCollection %}
                            {% include 'admin/catalog/_item_card.html.twig' with { item: collection, item_route: 'admin_catalog_collection_item'} %}
                        {% endfor %}
                        <div class="col-xl-4 col-sm-6" style="margin-bottom: 10px">
                            <a href="{{ path('admin_catalog_collection_item_new', {'category': item.id}) }}"
                               class="btn btn-success btn-lg btn-block">
                                {{ 'Add new' }}
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
