{% extends 'admin/base_item.html.twig' %}

{% block item_form %}
<div class="col-6">
    {{ form(form, {'attr': {'id': 'form-' ~ form.vars.id }}) }}
</div>
<div class="col-6">
    {% if item.category %}
        <div class="row mt-3">
            <div class="col-lg-12">
                <div>
                    <h5 class="mb-3">{{ 'Category'|trans }}:</h5>
                    <div class="row">
                        {% include 'admin/catalog/_item_card.html.twig' with {'item': item.category, 'item_route': 'admin_catalog_category_item'} %}
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
        <div class="row mt-3">
            <div class="col-lg-12">
                <h5 class="mb-3">{{ 'Products'|trans }}:</h5>
                <div class="row">
                    {% for product in item.products %}
                        {% include 'admin/catalog/_item_card.html.twig' with { item: product, item_route: 'admin_catalog_product_item'} %}
                    {% endfor %}
                </div>
                <div style="margin-bottom: 10px; text-align: right">
                    <a href="{{ path('admin_catalog_product_item_new', {'collection': item.id}) }}"
                       class="btn btn-success btn-lg btn-block">
                        {{ 'Add new' }}
                    </a>
                </div>
            </div>
        </div>
</div>
{% endblock %}
