{% extends 'admin/base_index.html.twig' %}
{% block  stylesheets %}
    {{ parent() }}
{% endblock %}

{% block rows_table %}
    <table class="table align-middle table-nowrap table-check">
        <thead class="table-light">
        <tr>
            <th class="align-middle"> {{ 'ID'|trans }}</th>
            <th class="align-middle"> {{ 'Title'|trans }}</th>
            <th class="align-middle">{{ 'Img'|trans }}</th>
            <th class="align-middle">{{ 'Sub categories'|trans }}</th>
            <th class="align-middle">{{ 'Action'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for category in rows %}
            <tr class="odd">
                <td>{{ category.id }}</td>
                <td>{{ category.title }}</td>
                <td>
                    <img src="{{ category.img|app_img }}" class="img-thumbnail"
                         width="200px">
                </td>
                <td>
                    {% for child in category.children %}
                        <div>
                            <a href="{{ path('admin_catalog_category_item', {'id': child.id}) }}">
                                {{ child.title }} ({{ child.template.value }})
                            </a>
                        </div>
                    {% endfor %}
                </td>
                <td>

                    <a href="{{ path('admin_catalog_category_item', {'id': category.id}) }}"
                       type="button" class="btn btn-primary btn-sm btn-rounded">
                        {{ 'Edit'|trans }}
                    </a>
                </td>
            </tr>
        {% endfor %}

        </tbody>
    </table>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}